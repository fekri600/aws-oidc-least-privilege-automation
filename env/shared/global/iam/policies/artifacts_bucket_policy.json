{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowCIListBucketOnPrefix",
        "Effect": "Allow",
        "Principal": { "AWS": "${ci_role_arn}" },
        "Action": "s3:ListBucket",
        "Resource": "${bucket_arn}",
        "Condition": {
          "StringLike": {
            "s3:prefix": [
              "${prefix}",
              "${prefix}*"
            ]
          }
        }
      },
      {
        "Sid": "AllowCIPutGetOnArtifactsPrefix",
        "Effect": "Allow",
        "Principal": { "AWS": "${ci_role_arn}" },
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:AbortMultipartUpload",
          "s3:ListMultipartUploadParts"
        ],
        "Resource": "${bucket_arn}/${prefix}*"
      }
    ]
  }
  