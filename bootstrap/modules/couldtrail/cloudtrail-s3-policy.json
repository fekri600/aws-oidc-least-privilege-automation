{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AWSCloudTrailAclCheck",
      "Effect": "Allow",
      "Principal": { "Service": "cloudtrail.amazonaws.com" },
      "Action": "s3:GetBucketAcl",
      "Resource": "${bucket_arn}"
    },
    {
      "Sid": "AWSCloudTrailWrite",
      "Effect": "Allow",
      "Principal": { "Service": "cloudtrail.amazonaws.com" },
      "Action": "s3:PutObject",
      "Resource": "${bucket_arn}/*",
      "Condition": {
        "StringEquals": { "s3:x-amz-acl": "bucket-owner-full-control" }
      }
    },
    {
      "Sid": "AllowAAReadLogs",
      "Effect": "Allow",
      "Principal": { "AWS": "${aa_role_arn}" },
      "Action": [ "s3:ListBucket" ],
      "Resource": "${bucket_arn}"
    },
    {
      "Sid": "AllowAAGetLogObjects",
      "Effect": "Allow",
      "Principal": { "AWS": "${aa_role_arn}" },
      "Action": [ "s3:GetObject" ],
      "Resource": "${bucket_arn}/*"
    }
  ]
}
