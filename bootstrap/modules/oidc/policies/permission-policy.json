{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3StateManagement",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketAcl",
        "s3:PutObjectAcl",
        "s3:CreateBucket",
        "S3:PutBucketPolicy"
      ],
      "Resource": [
        "arn:aws:s3:::${state_bucket_name}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["*"],
      "Resource": "*"
    }
  ]
}